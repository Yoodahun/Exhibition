<p id="notice"><%= notice %></p>

<div class="container">
  <div class="well">
<h1 style="text-align: center;">Posts</h1>
<div class="table-reponsive">
<table class="table table-fit">
  <thead>
    <tr>
      <th>Title</th>
      <th>Area</th>
      <th>Tag List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.area %></td>
        <td><%=post.tag_list%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div style="text-align: center;">
  <%= paginate @posts %>
  </div>
</div>

<br>
  <div style="float:left; width: 50%;">
    <%= link_to 'New post', new_post_path %>
  </div>
  <div style="text-align: right; float: left; width: 50%;">
    <%= link_to 'All', bulletins_path %> |
    <%= link_to 'Snap', tag_path('Snap') %> |
    <%= link_to 'Portrait', tag_path('Portrait') %>  |
    <%= link_to 'Landscape', tag_path('Landscape') %>  |
    <%= link_to 'Travel', tag_path('Travel') %> |
    <%= link_to 'B&W', tag_path('BlackandWhite') %> |
    <%= link_to 'Film', tag_path('Film') %>
  </div>


  </div>
</div>
